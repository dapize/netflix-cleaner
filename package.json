{
	"name": "netflix-cleaner",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"lint": "biome lint ./src",
		"lint:fix": "biome check --write --unsafe ./src",
		"format": "bunx biome format --write ./src",
		"build": "tsc -b && vite build",
		"build:crx": "rm -rf dist && mkdir dist && bunx crx pack ./package -p key.pem -o ./dist/netflix-cleaner.crx"
	},
	"dependencies": {
		"preact": "^10.27.1",
		"tailwindcss": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@preact/preset-vite": "^2.10.2",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24.3.0",
		"crx": "^5.0.1",
		"typescript": "~5.9.2",
		"vite": "^7.1.3",
		"vite-plugin-svgr": "^4.5.0"
	}
}
