{
	"manifest_version": 3,
	"name": "Netflix Cleaner",
	"version": "1.0",
	"description": "Elimina el modal, reanuda el video y a\u00f1ade controles id\u00e9nticos a Netflix, con \u00edconos din\u00e1micos y estilos blancos.",
	"permissions": [
		"scripting",
		"tabs",
		"activeTab"
	],
	"host_permissions": [
		"https://www.netflix.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.netflix.com/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_title": "Netflix Cleaner"
	}
}